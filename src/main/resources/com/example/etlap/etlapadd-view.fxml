<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etlap.EtlapAddController" spacing="10" alignment="CENTER">
    <Label text="Új étel hozzáadása" />
    <HBox spacing="5">
        <Label text="Név:" />
        <TextField fx:id="nameField" />
    </HBox>
    <HBox spacing="5">
        <Label text="Leírás:" />
        <TextArea fx:id="descriptionField" wrapText="true" />
    </HBox>
    <HBox spacing="5">
        <Label text="Kategória:" />
        <ComboBox fx:id="categoryComboBox" />
    </HBox>
    <HBox spacing="5">
        <Label text="Ár:" />
        <Spinner fx:id="priceSpinner" min="0" max="100000" initialValue="1000" />
    </HBox>
    <Button text="Hozzáadás" onAction="#onAddFood" />
</VBox>
